import { combineReducers, configureStore } from '@reduxjs/toolkit'
import { setupListeners } from '@reduxjs/toolkit/query/react'
import { persistReducer, persistStore } from 'redux-persist'
{{#services}}
import { {{name}} } from '../services/{{path}}/{{name}}'
{{/services}}
{{#thunks}}
import {{thunkName}} from '../thunks/{{path}}/{{sanitizedPath}}.thunk'
{{/thunks}}
import authReducer from '../../../src/lib/redux/authSlice'

// Create a no-op storage for server-side rendering
const createNoopStorage = () => {
  return {
    getItem(_key: string) {
      return Promise.resolve(null)
    },
    setItem(_key: string, _value: any) {
      return Promise.resolve(_value)
    },
    removeItem(_key: string) {
      return Promise.resolve()
    },
  }
}

// Cookie storage implementation for redux-persist
const createCookieStorage = () => {
  return {
    getItem: (key: string): Promise<string | null> => {
      if (typeof document === 'undefined') return Promise.resolve(null)
      const matches = document.cookie.match(new RegExp(
        '(?:^|; )' + key.replace(/([.$?*|{}()[\]\\/+^])/g, '\\$1') + '=([^;]*)'
      ))
      return Promise.resolve(matches ? decodeURIComponent(matches[1]) : null)
    },
    setItem: (key: string, value: string): Promise<void> => {
      if (typeof document === 'undefined') return Promise.resolve()
      document.cookie = `${key}=${encodeURIComponent(value)}; path=/; max-age=2592000; SameSite=Lax`
      return Promise.resolve()
    },
    removeItem: (key: string): Promise<void> => {
      if (typeof document === 'undefined') return Promise.resolve()
      document.cookie = `${key}=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT`
      return Promise.resolve()
    },
  }
}

// Use cookie storage on client, noop storage on server
const storage =
  typeof window !== 'undefined'
    ? createCookieStorage()
    : createNoopStorage()

const persistConfig = {
  key: 'root',
  storage,
  whitelist: ['auth', 'branchState']
}

const rootReducer = combineReducers({
  auth: authReducer,
  {{#services}}
  [{{name}}.reducerPath]: {{name}}.reducer,
  {{/services}}
  {{#thunks}}
  {{sanitizedPath}}Thunks: {{thunkName}},
  {{/thunks}}
})

const persistedReducer = persistReducer(persistConfig, rootReducer)

export const store = configureStore({
  reducer: persistedReducer,
  middleware: (getDefaultMiddleware) =>
    (getDefaultMiddleware({
      serializableCheck: {
        ignoredActions: [
          'persist/PERSIST',
          'persist/REHYDRATE',
          'persist/PAUSE',
          'persist/PERSIST',
          'persist/PURGE',
          'persist/REGISTER'
        ]
      }
    }) as any).concat([
      {{#services}}
      {{name}}.middleware,
      {{/services}}
    ]),
  devTools: process.env.NODE_ENV !== 'production'
})

export const persistor = persistStore(store)
setupListeners(store.dispatch)

export type RootState = ReturnType<typeof store.getState>
export type AppDispatch = typeof store.dispatch
